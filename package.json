{
  "name": "heron-list",
  "version": "1.0.0",
  "description": "Mono repo do projeto heron-list",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "if [ $WEB_ENV ]; then npm run postinstall-web; fi; if [ $API_ENV ]; then npm run postinstall-api; fi",
    "postinstall-web": "cd packages/web && npm install",
    "postinstall-api": "cd packages/api && npm install",
    "server:start": "cd packages/web && npm start && node ../packages/api/build/server.js"
  },
  "author": "Andressa Noaves <isa.desenvolvimento@gmail.com>",
  "license": "ISC",
  "homepage": "https://github.com/i-zzaa/heron-list#readme"
}